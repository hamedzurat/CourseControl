    "lib": ["ESNext", "WebWorker"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "types": ["./worker-configuration.d.ts"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
